    },
    "servers": [
        {
            "url": "https://drug.approagency.ir",
            "description": ""
        }
    ],
    "paths": {
        "/api/drugs/search": {
            "get": {
                "tags": [
                    "Drugs"
                ],
                "summary": "جستجوی دارو",
                "description": "جستجوی دارو بر اساس نام با امکان فیلتر و صفحه‌بندی",
                "operationId": "searchDrugs",
                "parameters": [
                    {
                        "name": "q",
                        "in": "query",
                        "description": "نام دارو برای جستجو",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "maxLength": 100,
                            "minLength": 2
                        }
                    },
                    {
                        "name": "per_page",
                        "in": "query",
                        "description": "تعداد آیتم در هر صفحه",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 20,
                            "maximum": 100,
                            "minimum": 1
                        }
                    },
                    {
                        "name": "with_relations",
                        "in": "query",
                        "description": "دریافت اطلاعات مرتبط (گروه‌های دارویی و درمانی)",
