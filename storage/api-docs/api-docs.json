                    },
                    {
                        "name": "goroh_daroei_cod",
                        "in": "query",
                        "description": "فیلتر بر اساس گروه دارویی",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "goroh_darmani_cod",
                        "in": "query",
                        "description": "فیلتر بر اساس گروه درمانی",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
